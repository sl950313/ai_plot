<view class="container">
  <!-- 标题 -->
  <view class="title">
    <text>AI 文字生成图片</text>
  </view>

  <!-- 文字输入框 -->
  <view class="input-area">
    <input class="text-input" placeholder="请输入文字描述生成图片" bindinput="onInputChange" />
  </view>

  <!-- 生成按钮 -->
  <view class="button-area">
    <button bindtap="generateImage" class="generate-button">生成图片</button>
  </view>

  <!-- 加载提示 -->
  <view wx:if="{{isLoading}}" class="loading">
    <text>正在生成，请稍等...</text>
  </view>

  <!-- 图片展示 -->
  <view wx:if="{{generatedImage}}" class="image-area">
    <image src="{{generatedImage}}" mode="aspectFit" class="generated-image"></image>
  </view>

  <!-- 下载按钮 -->
  <view wx:if="{{generatedImage}}" class="download-area">
    <button bindtap="downloadImage" class="download-button">下载图片</button>
  </view>
</view>
