.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.input-area {
  margin-bottom: 20rpx;
}

.text-input {
  width: 80%;
  padding: 15rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  font-size: 24rpx;
}

.button-area {
  margin-bottom: 20rpx;
}

.generate-button {
  padding: 12rpx 30rpx;
  background-color: #4A90E2;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 5rpx;
}

.loading {
  margin-top: 30rpx;
  font-size: 24rpx;
  color: #999;
}

.image-area {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
}

.generated-image {
  width: 100%;
  max-width: 600rpx;
  height: auto;
  border-radius: 8rpx;
}

.download-area {
  margin-top: 20rpx;
}

.download-button {
  padding: 12rpx 30rpx;
  background-color: #1D9F1D;
  color: #ffffff;
  font-size: 26rpx;
  border-radius: 5rpx;
}
