.item-top{
  width:auto;
  height: 100px;
}
.item{
  width: auto;
  height: 50px;
  background: #888;
  font-size: 28px;
  color: rgba(255, 0, 0, 0.56);
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8px 0;
  text-align: center;
}

.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
}

.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0;
}