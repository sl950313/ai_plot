/* 整体容器设置（可选） */
.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.item-top {
  width: auto;
  height: 100px;
}

.item {
  width: 90%;
  height: 50px;
  background: #4A90E2; /* 更现代的蓝色 */
  font-size: 28rpx;
  color: #ffffff; /* 提高对比度 */
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 16rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.3s;
}

.item:hover {
  background: #357ABD; /* 悬停效果 */
}

.top-tab {
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin-bottom: 8rpx;
  z-index: 9999;
}

.toptab.active {
  color: #ffffff;
  border-bottom: solid 2rpx #ffffff;
}

.activity {
  width: 750rpx;
  height: 375rpx;
}

.activity image {
  width: 100%; /* 自动适应父容器宽度 */
  height: auto; /* 保持图像比例 */
}

.placehold {
  font-size: 28rpx;
  padding: 80rpx 0;
}
