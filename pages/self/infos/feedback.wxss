/* 整体容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 分区通用样式 */
.section {
  width: 100%;
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
}

/* 标题样式 */
.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
  text-align: center;
}

/* 作品简介文字 */
.section-content .description {
  font-size: 28rpx;
  color: #555555;
  line-height: 40rpx;
  text-align: justify;
}

/* 作者简介部分 */
.author-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 10rpx;
}

/* 作者头像 */
.author-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #dddddd;
}

/* 作者详细信息 */
.author-details {
  flex: 1;
}

/* 作者名字 */
.author-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

/* 作者介绍文字 */
.author-bio {
  font-size: 26rpx;
  color: #555555;
  line-height: 36rpx;
  margin-bottom: 10rpx;
}

/* 联系方式 */
.author-contact {
  font-size: 24rpx;
  color: #666666;
}

.author-weixin {
  width: 300rpx;
  height: 300rpx;
  border-radius: 30%;
  margin-right: 20rpx;
  border: 2rpx solid #dddddd;
}