/* 容器样式 */
.container {
  padding: 20px;
  background-color: #f5f5f5;
  height: 100%;
}

/* 标题样式 */
.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  color: #333;
}

/* 反馈内容输入框样式 */
.textarea {
  width: 100%;
  height: 200px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 10px;
  font-size: 16px;
  margin-bottom: 10px;
  background-color: #fff;
  resize: none;
}

/* 联系方式输入区域 */
.contact-section {
  margin-bottom: 10px;
}
.contact-input {
  width: 100%;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 10px;
  font-size: 16px;
  background-color: #fff;
}

/* 提交按钮样式 */
.submit-btn {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  font-size: 18px;
  padding: 12px 0;
  border-radius: 8px;
  text-align: center;
}
.submit-btn:active {
  background-color: #45A049;
}
