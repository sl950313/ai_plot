/* pages/self/infos/contact.wxss */

/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5; /* 柔和的背景色 */
}

/* 文字样式 */
.text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx; /* 增加文字与图片间距 */
  text-align: center; /* 居中对齐文字 */
}

/* 图片样式 */
.image {
  width: 300rpx; 
  /* height: auto; 自动调整高度，保持图片比例 */
  border-radius: 10rpx; /* 图片四角圆润 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2); /* 添加阴影效果 */
  margin-top: 10rpx;
}
