.container {
  padding: 20px;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.upload-section {
  width: 100%;
  margin-bottom: 20px;
}

.upload-btn {
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  text-align: center;
  border-radius: 5px;
}

.preview-section {
  display: flex;
  margin-top: 10px;
  overflow-x: auto;
}

.preview-img {
  width: 80px;
  height: 80px;
  margin-right: 10px;
  border-radius: 5px;
  border: 1px solid #ddd;
}

.settings {
  width: 100%;
  margin-bottom: 20px;
}

.setting-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.setting-label {
  /* flex: 2; */
  font-size: 16px;
  color: #333;
}

.setting-input {
  flex: 2;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.picker {
  flex: 2;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  text-align: center;
}

.actions {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.generate-btn, .save-btn {
  flex: 1;
  margin: 0 5px;
  padding: 10px;
  border-radius: 5px;
  text-align: center;
}

.generate-btn {
  background-color: #007aff;
  color: white;
}

.save-btn {
  background-color: #4caf50;
  color: white;
}

.generate-btn[disabled], .save-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

.gif-preview {
  width: 100%;
  text-align: center;
}

.preview-title {
  margin-bottom: 10px;
  font-size: 18px;
  color: #333;
}

.gif-img {
  width: 100%;
  max-height: 300px;
  object-fit: contain;
  border: 1px solid #ddd;
  border-radius: 5px;
}
