/* 整体容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f9f9f9;
  padding: 30rpx;
  min-height: 100%;
}

/* 标题样式 */
.header {
  width: 100%;
  text-align: center;
  margin-bottom: 30rpx;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  letter-spacing: 2rpx;
}

/* 输入区域 */
.input-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.picker {
  width: 100%;
  padding: 16rpx;
  background-color: #ecf0f1;
  font-size: 28rpx;
  color: #2c3e50;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.expression-input {
  width: 100%;
  height: 60rpx;
  padding: 10rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  border: 1px solid #bdc3c7;
  border-radius: 8rpx;
}

.action-button {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  color: #ffffff;
  background-color: #27ae60;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  line-height: 60rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s ease;
}

.action-button:hover {
  background-color: #2ecc71;
}

.action-button.clear {
  background-color: #e74c3c;
}

.action-button.clear:hover {
  background-color: #c0392b;
}

/* 绘图区域 */
.canvas-section {
  width: 100%;
  padding: 10rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
}

.function-canvas {
  width: 100%;
  height: 500rpx;
  border-radius: 8rpx;
}

/* 提示信息 */
.tips {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #7f8c8d;
  text-align: center;
  line-height: 40rpx;
}
