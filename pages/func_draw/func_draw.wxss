/* 整体容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 标题样式 */
.header {
  width: 100%;
  text-align: center;
  margin-bottom: 20rpx;
}
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

/* 输入区域 */
.input-section {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.function-input {
  flex: 4;
  height: 60rpx;
  padding: 0 10rpx;
  border: 1px solid #cccccc;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #333333;
}
.picker {
  padding: 10px;
  background-color: #f0f0f0;
  margin-bottom: 20px;
  font-size: 20px;
  border-radius: 5px;
}

.expression-input {
  width: 100%;
  padding: 10px;
  font-size: 20px;
  margin-bottom: 20px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.draw-button {
  width: 100%;
  padding: 10px;
  background-color: #4caf50;
  color: #fff;
  border: none;
  border-radius: 5px;
  text-align: center;
}

/* 绘图区域 */
.canvas-section {
  width: 100%;
  margin-top: 20rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  padding: 10rpx;
}

.function-canvas {
  width: 100%;
  height: 400rpx;
  border-radius: 5rpx;
}

/* 提示信息 */
.tips {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  line-height: 36rpx;
}
